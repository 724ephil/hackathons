{
  "manifest_version": 2,
  "name": "Chrome Extension Workshop",
  "description": "A workshop tutorial extension",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "*://*/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "options_page": "options.html",
  "web_accessible_resources": ["old_town_road.mp3"]
}
